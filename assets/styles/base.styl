*{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
html,
body{
  font-family: "Source Sans Pro", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 16px;
  word-spacing: 1px;
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  box-sizing: border-box;
  color: #333;
  background: #f7f7f7;
}
h1,
h2 {
  font-weight: normal;
}

ul {
  list-style-type: none;
  padding: 0;
}

a {
  color: #222222;
  text-decoration: none;
}
*, *:before, *:after {
  box-sizing: border-box;
  margin: 0;
}
#container{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
// pre code style start
.language-markup,.language-javascript{
  color: #abb2bf;
  background: #282c34;
  padding: 15px;
  font-size: 13px;
  word-wrap: normal;
  white-space: pre;
  overflow: auto;
  border-radius: 4px;
  margin-bottom: 8px;
}
//pre code style end

.page-container{
  padding: 15px;
}

.blog-item:first-child{
  margin-top: 0
}
.blog-item{
  color: #222222;
  margin-top: 20px;
  padding: 15px;
  overflow: hidden;
  background-color: #fff;
  transition: all .5s ease;
}

.blog-title{
  font-size: 20px;
}
.blog-time{
  font-size: 12px;
  color: #999;
  margin-bottom: 5px;
}
@media screen and (max-width: 479px){
  .page-container{
    padding: 20px 0;
  }
  .blog-item{
    box-shadow: none;
  }
  .header{
    display: none;
  }
}
.wrapper{
  position: relative;
  -webkit-user-select: none;
  -moz-user-select: none;
  user-select: none;
  border-radius: 6px;
  a{
    line-height: 2;
    font-size: 16px;
  }
  .more{
    float: right;
    height: 34px;
    line-height: 3;
    text-decoration: underline;
    color: #3eaf7c;
    font-size: 14px;
  }
  h1{
    font-family: 'Montserrat', 'Helvetica Neue', Arial, sans-serif;
    font-weight: 600;
    margin: 12px 0;
    left: 2px;
  }
}
